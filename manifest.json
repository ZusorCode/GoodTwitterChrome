{
  "name": "GoodTwitter",
  "version": "1.3",
  "description": "Forces your browser to use old twitter.",
  "manifest_version": 2,
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.twitter.com/",
    "browsingData",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["https://*.twitter.com/*"],
      "js": ["fix-twitter.js"]
    }
  ],

  "browser_action": {
    "default_popup": "popup/info.html"
  },

  "icons": {"128": "128.png"}
}
